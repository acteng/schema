        },
      "year": {
        "type": "string",
        "minLength": 7,
        "maxLength": 7,
        "default": "2022/23"
      },
      "budget": {
        "type": "integer",
        "minLength": 3,
        "maxLength": 7,
        "default": "10000"
      }
    }
  }